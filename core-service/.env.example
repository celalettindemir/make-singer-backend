# Server Configuration
SERVER_PORT=8000
SERVER_ENV=development

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limits
RATELIMIT_LYRICS_PER_MIN=30
RATELIMIT_RENDER_PER_HOUR=5
RATELIMIT_MASTER_PER_HOUR=10
RATELIMIT_EXPORT_PER_HOUR=20
RATELIMIT_UPLOAD_PER_HOUR=50

# Groq AI Configuration
GROQ_API_KEY=gsk_...
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_MODEL=llama-3.3-70b-versatile

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=makeasinger
R2_PUBLIC_URL=https://cdn.makeasinger.com

# Zitadel OIDC Configuration
ZITADEL_DOMAIN=your-tenant.zitadel.cloud
ZITADEL_CLIENT_ID=your-client-id
ZITADEL_ISSUER=https://your-tenant.zitadel.cloud

# Suno API Configuration
SUNO_API_KEY=your-suno-api-key
SUNO_BASE_URL=https://api.sunoapi.org

# Audio Processing Service Configuration
AUDIO_SERVICE_URL=http://audio-service:8084
AUDIO_SERVICE_TIMEOUT=120

# API Gateway Configuration
GATEWAY_ENABLED=false
